{
  "name": "whackerlinkconsole",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -mwl",
    "build:linux": "electron-builder --linux",
    "build:windows": "electron-builder --windows",
    "build:mac": "electron-builder --mac"
  },
  "build": {
    "appId": "com.whackerlink.whackerlinkconsole",
    "productName": "WhackerLinkConsole",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "index.js",
      "public/**/*",
      "codeplugs/**/*",
      "views/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "public/",
        "filter": ["**/*"]
      },
      {
        "from": "codeplugs/",
        "to": "codeplugs/",
        "filter": ["**/*"]
      },
      {
        "from": "views/",
        "to": "views/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/imgs/favicon.ico"
    },
    "win": {
      "target": "nsis",
      "publisherName": "WhackerLink",
      "icon": "public/imgs/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "public/imgs/favicon.ico"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  }
}